COLOR_CODES="'${BLACK}' '${RED}' '${GREEN}' '${YELLOW}' '${BLUE}' '${PURPLE}' '${CYAN}' \
    '${LGRAY}' '${GRAY}' '${LRED}' '${LGREEN}' '${LYELLOW}' '${LBLUE}' '${LPURPLE}'  \
    '${LCYAN}' '${WHITE}' '${NC}'";


