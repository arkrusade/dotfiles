#!/bin/bash

set +x
## Tmux

git clone https://github.com/tmux-plugins/tpm ~/.tmux/plugins/tpm

## Vim extensions
VIM_PACK_DIR="$HOME/.vim/pack"
justin_dir="$VIM_PACK_DIR/justinjl"
mkdir $justin_dir -p
cd $justin_dir 
mkdir opt start -p

git clone --recurse-submodules https://github.com/python-mode/python-mode.git $justin_dir/start/python-mode

git clone --recurse-submodules https://github.com/flazz/vim-colorschemes $justin_dir/start/flazz-colors

## Extensions from tpope
tpope_dir="$VIM_PACK_DIR/tpope/start"
mkdir -p $tpope_dir
cd $tpope_dir

## Surround
git clone https://tpope.io/vim/surround.git
vim -u NONE -c "helptags surround/doc" -c q

## Commentary
git clone https://tpope.io/vim/commentary.git
vim -u NONE -c "helptags commentary/doc" -c q

# TODO: make ssh key?
