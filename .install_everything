#!/bin/bash

function mkd()
{
    echo "making directory ${1}"
    mkdir "$@"
    read -p "enter"
}

## stop on error
set -e
## prints commands to stdout
set +x
## Tmux

git clone -q https://github.com/tmux-plugins/tpm ~/.tmux/plugins/tpm

## Vim extensions
VIM_PACK_DIR="$HOME/.vim/pack"
justin_dir="$VIM_PACK_DIR/justinjl"
mkd $justin_dir -p
cd $justin_dir
mkd opt start -p

git clone --recurse-submodules -q https://github.com/python-mode/python-mode.git $justin_dir/start/python-mode

git clone --recurse-submodules -q https://github.com/flazz/vim-colorschemes $justin_dir/start/flazz-colors

git clone -q https://github.com/zenorocha/dracula-theme $justin_dir/start/dracula



## Extensions from tpope
tpope_dir="$VIM_PACK_DIR/tpope/start"
mkd -p $tpope_dir
cd $tpope_dir

## Surround
git clone -q https://tpope.io/vim/surround.git
vim -u NONE -c "helptags surround/doc" -c q

## Commentary
git clone -q https://tpope.io/vim/commentary.git
vim -u NONE -c "helptags commentary/doc" -c q

