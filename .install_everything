#!/bin/bash

function mkd() 
{
    echo "making directory ${1}"
    mkdir "$@"
    read -p "enter"
}

set -e
## prints commands to stdout
set -x
## Tmux

# git clone https://github.com/tmux-plugins/tpm ~/.tmux/plugins/tpm > /dev/null

## Vim extensions
VIM_PACK_DIR="$HOME/.vim/pack"
justin_dir="$VIM_PACK_DIR/justinjl"
mkd $justin_dir -p
cd $justin_dir 
mkd opt start -p

git clone --recurse-submodules https://github.com/python-mode/python-mode.git $justin_dir/start/python-mode > /dev/null

git clone --recurse-submodules https://github.com/flazz/vim-colorschemes $justin_dir/start/flazz-colors > /dev/null

## Extensions from tpope
tpope_dir="$VIM_PACK_DIR/tpope/start"
mkd -p $tpope_dir
cd $tpope_dir

## Surround
git clone https://tpope.io/vim/surround.git > /dev/null
vim -u NONE -c "helptags surround/doc" -c q 

## Commentary
git clone https://tpope.io/vim/commentary.git > /dev/null
vim -u NONE -c "helptags commentary/doc" -c q 

# TODO: make ssh key?
